---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404">
  <section class="text-center h-screen flex items-center">
    <div class="container">
      <h4 class="text-4xl lg:text-[10rem] font-bold leading-none">404</h4>
      <h3 class="text-4xl mb-4">
        <strong class="text-primary">Oops!</strong> This page cannot be found.
      </h3>
      <p class="text-xl text-gray-500 mb-10">
        Sorry, the page you are looking for is not available.<br /> Maybe you want to
        go home
      </p>

      <a href="/" class="text-white px-7 py-4 bg-black rounded-lg font-bold text-lg">Go Home</a>
    </div>
  </section>
</Layout>
